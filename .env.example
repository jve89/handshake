# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/handshake

# JWT secret key (use a strong random string)
JWT_SECRET=your_jwt_secret_here

# JWT token expiration time (e.g. 1h, 7d)
JWT_EXPIRES_IN=1d

# Server port
PORT=3000

# Optional: Node environment
NODE_ENV=development

# Optional email SMTP config (for future email features)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_user
# SMTP_PASS=your_smtp_password

# ---- Dev-only autologin (used only when import.meta.env.DEV is true) ----
VITE_DEV_EMAIL=dev@example.com
VITE_DEV_PASSWORD=devpass123
